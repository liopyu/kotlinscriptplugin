{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ES6",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": true,
    
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true
  }
}
