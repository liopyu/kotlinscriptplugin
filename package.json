{
  "name": "kotlinscript",
  "displayName": "KotlinScript",
  "description": "Syntax highlighting and suggestion code for kotlinscript",
  "author": {
    "name": "Liopyu"
  },
  "publisher": "Liopyu",
  "version": "0.0.1",
  "license": "GPL-3.0-only",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:kotlin"
  ],
  "main": "./dist/extension.js",
  "tree-sitter": {
    "parser-dir": "./"
  },
  "languages": [
    {
      "id": "kotlin",
      "aliases": [
        "kotlin"
      ],
      "extensions": [
        ".kt",
        ".kts"
      ],
      "configuration": "./language-configuration.json"
    }
  ],
  "contributes": {
    "languages": [
      {
        "id": "kotlin",
        "extensions": [
          ".kt",
          ".kts"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "kotlin",
        "scopes": {
          "keyword": [
            "keyword",
            "keyword.function"
          ],
          "type": [
            "type",
            "type.builtin"
          ],
          "constant": [
            "constant"
          ],
          "function": [
            "function",
            "function.builtin"
          ],
          "variable": [
            "variable",
            "variable.builtin",
            "variableIdentifier"
          ],
          "string": [
            "string",
            "string.escape",
            "string.regex"
          ],
          "comment": [
            "comment"
          ],
          "operator": [
            "operator"
          ]
        }
      }
    ],
    "configuration": {
      "title": "Kotlinscript Config",
      "properties": {
        "kotlinscript.overwriteDefaultTheme": {
          "type": "boolean",
          "default": false,
          "description": "Overwrite the default theme configuration on each activation."
        },
        "kotlinscript.ktsDirectory": {
          "type": "string",
          "default": "config/scripts",
          "description": "Path to the directory containing .kts files for the extension to read."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "mocha": "^10.8.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@vscode/vsce": "^2.24.0",
    "vscode": "^1.1.37",
    "web-tree-sitter": "^0.24.4"
  }
}