{
    "comments": {
        "lineComment": "//",
        "blockComment": [
            "/*",
            "*/"
        ]
    },
    "brackets": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ]
    ],
    "autoClosingPairs": [
        {
            "open": "{",
            "close": "}"
        },
        {
            "open": "[",
            "close": "]"
        },
        {
            "open": "(",
            "close": ")"
        },
        {
            "open": "'",
            "close": "'",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "\"",
            "close": "\"",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "/**",
            "close": " */",
            "notIn": [
                "string"
            ]
        }
    ],
    "surroundingPairs": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ],
        [
            "<",
            ">"
        ],
        [
            "'",
            "'"
        ],
        [
            "\"",
            "\""
        ]
    ],
    "folding": {
        "offSide": true,
        "markers": {
            "start": "^\\s*//\\s*#region",
            "end": "^\\s*//\\s*#endregion"
        }
    },
    "onEnterRules": [
        {
            "beforeText": "^\\s*/\\*\\*.*$",
            "afterText": "^.*\\*/\\s*$",
            "action": {
                "indent": "indentOutdent",
                "appendText": " * "
            }
        },
        {
            "beforeText": "^\\s*/\\*\\*.*$",
            "action": {
                "indent": "none",
                "appendText": " * "
            }
        },
        {
            "beforeText": "^\\s*\\*(?=\\s|$).*$",
            "action": {
                "indent": "none",
                "appendText": "* "
            }
        }
    ],
    "indentationRules": {
        "increaseIndentPattern": "^.*\\{[^}\"']*$",
        "decreaseIndentPattern": "^(.*\\*/)?\\s*\\}.*$"
    }
}